% Designing Song FIR LPF

clc
clear all

[x1,Fs,bits] = wavread('two.wav');
x = x1(:,1)';

figure(1)
plot(x)

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

for n = 0:1:300
    hd(n+1) = sin(0.463*pi*(n-150))/(pi*(n-150));
end

hd(151) = 0.463;

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

for n = 0:1:300
    wr(n+1) = 1;
end

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

hr = hd .* wr;

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

figure(2)
freqz(hr,1,301);

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

y = conv(x,hr);

wavwrite(y,Fs,bits,'Filter_amplifiedtwo.wav')
